@model v1jobportal.Models.ApplicantBioData

@{
    ViewData["Title"] = "Create";
}
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#home">Bio Data</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" data-toggle="tab" href="#profile">Education History</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#">Employment History</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#">Certificates & Awards</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#">Upload Documents</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="#">Summary</a>
        </li>

    </ul>

<hr />
    <div class="tab-pane fade active show" id="home">

        <form asp-action="Create">
            <h6 class="font-italic">Please enter all your Bio data as requested below</h6>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="FirstName" class="control-label">Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!--<div class="col-md-4">
                    <label asp-for="MiddleName" class="control-label">Middle Name</label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="LastName" class="control-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>-->
            </div>
            <div class="form-group">
                <label asp-for="Residence" class="control-label">Residential Address</label>
                <input asp-for="Residence" class="form-control" />
                <span asp-validation-for="Residence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrimaryPhoneNumber" class="control-label">Primary Phone Number</label>
                @Html.TextBoxFor(model => model.PrimaryPhoneNumber, new { placeholder = "0000-000-000", @class = "form-control" })
                <!--<label asp-for="PrimaryPhoneNumber" class="control-label">Primary Phone Number</label>
        <input asp-for="PrimaryPhoneNumber" class="form-control" />-->
                <span asp-validation-for="PrimaryPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlternativePhoneNumber" class="control-label">Alternative Phone Number</label>
                @Html.TextBoxFor(model => model.AlternativePhoneNumber, new { placeholder = "0000-000-000", @class = "form-control" })
            </div>

           
            <div class="form-group row">
                <label asp-for="LanguagesSpoken" class="control-label"></label>
                <div class="col-sm-10">
                    <select asp-for="LanguagesSpoken" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Language>()"></select>
                </div>
            </div>
            <div class="form-check-label"><label class="control-label">Please tick below if yes</label></div>
            <div class="form-group form-check">

                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WorkedWithIDRC" /> @Html.DisplayNameFor(model => model.WorkedWithIDRC)
                </label>
            </div>
            <div class="form-group float-md-right">
                <input type="submit" value=" Next" class="btn btn-success" />
            </div>
        </form>
     </div>
