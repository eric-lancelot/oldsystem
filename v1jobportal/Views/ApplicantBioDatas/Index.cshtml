@model IEnumerable<v1jobportal.Models.ApplicantBioData>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Residence)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimaryPhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AlternativePhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LanguagesSpoken)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkedWithIDRC)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Residence)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimaryPhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlternativePhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LanguagesSpoken)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkedWithIDRC)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
