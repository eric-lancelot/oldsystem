@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>

<a asp-action="CreateRole">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>

            <td>Name</td>
            <td>Id</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var role in Model)
            {
        <tr>
            <td>@role.Name</td>
            <td>@role.Id</td>
            <td>
                <a asp-action="EditRole" asp-route-id="@role.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@role.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
            </td>

        </tr>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No Roles created yet
                </div>
            </div>
        }
    </tbody>
</table>