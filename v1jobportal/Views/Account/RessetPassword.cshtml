@model AccountConfirmationModel

@{
    ViewBag.Title = "Resset Password";
}




    <div class="row d-flex justify-content-center">
        
        <div class="col-md-6">
            <h3>Resset password for account</h3>
            <h6>Please enter your email. A password reset link will be sent to you through it.</h6>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Resset Password</button>
            </form>

        </div>

    </div>
